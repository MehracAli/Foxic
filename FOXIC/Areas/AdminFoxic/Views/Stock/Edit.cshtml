@using FOXIC.Entities.ClothingModels;
@model FOXIC.Entities.ClothingModels.ClothingColorSize

@{
    ViewData["Title"] = "Edit";
    List<Clothing> clothes = ViewBag.Clothes;
    List<Color> colors = ViewBag.Colors;
    List<Size> sizes = ViewBag.Sizes;
}
<div style="padding:100px 100px 100px 300px">

<h1>Edit</h1>

<h4>ClothingColorSize</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColorId" class="control-label"></label>
                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId">
                    @foreach (var color in colors)
                        {
                            if (Model.ColorId == color.Id)
                            {
                                <option value="@color.Id" selected="selected">@color.Name</option>
                            }
                            else
                            {
                                <option value="@color.Id">@color.Name</option>
                            }
                        }
                </select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SizeId" class="control-label"></label>
                <select asp-for="SizeId" class="form-control" asp-items="ViewBag.SizeId">
                        @foreach (var size in sizes)
                        {
                            if (Model.SizeId == size.Id)
                            {
                                <option value="@size.Id" selected="selected">@size.Name</option>
                            }
                            else
                            {
                                <option value="@size.Id">@size.Name</option>
                            }
                        }
                </select>
                <span asp-validation-for="SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" value="1" min="1"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</div>