	<script>
		const collection1Btn = document.querySelector(".collection-1-btn")
		const collection2Btn = document.querySelector(".collection-2-btn")
		console.log(collection1Btn)
		
		collection1Btn.addEventListener("click", function(){
			let col1 = document.querySelectorAll(".collection-1")
			let col2 = document.querySelectorAll(".collection-2")
			col1.forEach((Element)=>{
				Element.classList.add("collectionBlock")
			})

			col2.forEach((Element)=>{
				Element.classList.remove("collectionBlock")
			})
		})

		collection2Btn.addEventListener("click", function(){
			let col2 = document.querySelectorAll(".collection-2")
			let col1 = document.querySelectorAll(".collection-1")
			col2.forEach((Element)=>{
				Element.classList.add("collectionBlock")
			})

			col1.forEach((Element)=>{
				Element.classList.remove("collectionBlock")
			})
		})
	</script>
